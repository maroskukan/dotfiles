" A customized .vimrc for vim (https://www.vim.org)

"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" General settings
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
set number
set bg          =dark
set tabstop     =2
set softtabstop =2
set shiftwidth  =2
set expandtab

"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" Custom abbreviations
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
abbr _sh #!/usr/bin/env bash

"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" Custom shortcuts
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
nmap <C-N> :set invnumber<CR>
